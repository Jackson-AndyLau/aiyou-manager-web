<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- 配置扫描包 -->
	<context:component-scan
		base-package="com.huazai.b2c.aiyou.controller" />
	<mvc:annotation-driven />
	<!-- 加载配置文件配置 -->
	<context:property-placeholder
		location="classpath:/resource/*.properties" />
	<!-- 配置视图解析器 -->
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>

	<!-- 添加js，css资源映射标签 -->
	<!-- location="/WEB-INF/js/" 表示在该目录下的静态资源包括子目录下的静态资源都不会被拦截 -->
	<!-- mapping="/js/**" 表示访问静态资源的路径的形式，可以访问/js/下的静态资源或者所有子目录下的静态资源 -->
	<mvc:resources location="/WEB-INF/js/" mapping="/js/**" />
	<mvc:resources location="/WEB-INF/css/" mapping="/css/**" />
	<mvc:resources location="/WEB-INF/images/"
		mapping="/images/**" />

	<!-- 定义文件上传解析器 -->
	<bean id="multipartResolver"
		class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<!-- 配置默认编码格式 -->
		<property name="defaultEncoding" value="UTF-8" />
		<!-- 配置上传文件最大大小限制，5 * 1024 * 1024 -->
		<property name="maxUploadSize" value="5242880" />
	</bean>

	<!-- 配置远程Dubbo服务地址 -->
	<dubbo:application name="aiyou-manager-web" />
	<dubbo:registry protocol="zookeeper"
		address="${single.zookeeper.baseUrl}" />

	<!-- 应用调用远程服务接口 -->
	<dubbo:reference
		interface="com.huazai.b2c.aiyou.service.TbDubboService"
		id="tbDubboService" timeout="300000" />
	<dubbo:reference
		interface="com.huazai.b2c.aiyou.service.TbItemService"
		id="tbItemService" timeout="300000" />
	<dubbo:reference
		interface="com.huazai.b2c.aiyou.service.TbItemDescService"
		id="tbItemDescService" timeout="300000" />
	<dubbo:reference
		interface="com.huazai.b2c.aiyou.service.TbContentCategoryService"
		id="tbContentCategoryService" timeout="300000" />
	<dubbo:reference
		interface="com.huazai.b2c.aiyou.service.TbContentService"
		id="tbContentService" timeout="300000" />
	<dubbo:reference
		interface="com.huazai.b2c.aiyou.service.TbItemCatService"
		id="tbItemCatService" timeout="300000" />
	<dubbo:reference
		interface="com.huazai.b2c.aiyou.service.SearchItemService"
		id="searchItemService" timeout="300000" />
</beans>